{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@local-n8n/core/*": [
                "packages/core/*"
            ],
            "@local-n8n/database": [
                "packages/database/dist"
            ],
            "@local-n8n/database/*": [
                "packages/database/*"
            ]
        }
    }
}